{
    "button": {
        "colours": {
            "normal_bg": "#007BFF",
            "hovered_bg": "#0056b3",
            "active_bg": "#004085",
            "normal_border": "#FFFFFF",
            "hovered_border": "#FFFFFF",
            "active_border": "#FFFFFF",
            "normal_text": "#FFFFFF",
            "hovered_text": "#FFFFFF",
            "active_text": "#FFFFFF"
        },
        "fonts": {
            "size": "24",
            "name": "freesansbold.ttf"
        },
        "misc": {
            "border_width": 2,
            "shadow_width": 2,
            "shape_corner_radius": 10
